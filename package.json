{
  "name": "elora-chat",
  "version": "1.0.0",
  "description": "Desktop application for Streamlabs chat widget",
  "author": "Your Name",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable --config.win.signAndEditExecutable=false"
  },
  "build": {
    "appId": "com.elora.chat",
    "productName": "Elora Chat",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["portable"],
      "artifactName": "${productName}.exe"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}
